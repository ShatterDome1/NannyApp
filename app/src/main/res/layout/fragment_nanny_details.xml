<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".main.ui.details.ParentDetailsFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nanny_details_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nanny_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_image" />

        <TextView
            android:id="@+id/nanny_details_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="4.5"
            app:drawableStartCompat="@drawable/ic_rating"
            android:drawablePadding="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/nanny_details_image"
            app:layout_constraintStart_toEndOf="@+id/nanny_details_image" />

        <TextView
            android:id="@+id/nanny_details_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            app:drawableStartCompat="@drawable/ic_age"
            android:text="21"
            app:layout_constraintBottom_toBottomOf="@+id/nanny_details_image"
            app:layout_constraintEnd_toStartOf="@+id/nanny_details_image" />

        <TextView
            android:id="@+id/nanny_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="TextView"
            android:textIsSelectable="true"
            app:drawableStartCompat="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_name" />

        <TextView
            android:id="@+id/nanny_details_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            android:text="TextView"
            android:textIsSelectable="true"
            app:drawableStartCompat="@drawable/ic_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_phone" />

        <TextView
            android:id="@+id/nanny_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            app:drawableStartCompat="@drawable/ic_location"
            android:text="TextView"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_email" />

        <TextView
            android:id="@+id/nanny_details_skills_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/skills"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_address" />

        <TextView
            android:id="@+id/nanny_details_skills_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_border"
            android:padding="10dp"
            android:text=""
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_skills_label" />

        <TextView
            android:id="@+id/nanny_details_experience_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:text="@string/experience"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_skills_value" />

        <TextView
            android:id="@+id/nanny_details_experience_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_border"
            android:padding="10dp"
            android:text=""
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_experience_label" />

        <TextView
            android:id="@+id/nanny_details_add_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            app:drawableStartCompat="@drawable/ic_review"
            android:background="@drawable/text_view_border"
            android:padding = "6dp"
            android:text="@string/leave_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nanny_details_experience_value" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
